<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.iut.cascade.ScoreboardActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/scoreboard_background">

    </FrameLayout>

    <ImageView
        android:id="@+id/minus_button"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/image_content"
        android:onClick="onButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/minus_default" />

    <ImageView
        android:id="@+id/plus_button"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/image_content"
        android:onClick="onButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/plus_default" />

    <ImageView
        android:id="@+id/difficulty_stars"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/image_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dif_4" />

    <LinearLayout
        android:id="@+id/rankingLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="185dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
